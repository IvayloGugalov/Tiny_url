{
  "name": "tiny-link-app",
  "version": "0.0.1",
  "description": "A tiny link app built with Bun, Hono, Vite, and React",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "packageManager": "bun@1.2.18",
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:shared": "turbo dev --filter=server",
    "lint": "turbo lint",
    "postinstall": "turbo build --filter=shared --filter=server"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "bun-types": "latest",
    "eslint-plugin-boundaries": "^5.0.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript-eslint": "^8.38.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {}
}
